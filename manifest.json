{
  "manifest_version": 2,
  "name": "arXiv2AlphaXiv",
  "version": "1.0",
  "description": "Redirects ArXiv URLs to AlphaXiv",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.png",
    "default_title": "ArXiv Redirector"
  },
  "permissions": [
    "webNavigation",
    "storage",
    "tabs",
    "notifications"
  ],
  "options_ui": {
    "page": "preferences.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "abcd@email.com",
      "strict_min_version": "48.0"
    }
  }
}
