{
  "manifest_version": 2,
  "name": "ArXiv Redirector",
  "version": "1.0",
  "description": "Redirects ArXiv URLs to AlphaXiv",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "webNavigation",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://arxiv.org/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ArXiv Redirector"
  }
}
