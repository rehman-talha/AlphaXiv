{
  "manifest_version": 2,
  "name": "AlphaXIV ArXiv Connector",
  "version": "1.0",
  "description": "Connects ArXiv papers to AlphaXIV",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Connect to AlphaXIV",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://arxiv.org/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
